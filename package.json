{
	"name": "nippo-gen",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"dev": "vite --config src/ui/vite.config.ts",
		"dev:server": "tsx watch src/server/index.ts",
		"typecheck": "tsc --noEmit",
		"build:server": "tsdown src/server/index.ts --platform node --format esm --out-dir dist --outfile server.js",
		"build:ui": "vite build --config src/ui/vite.config.ts",
		"build": "pnpm typecheck && pnpm build:server && pnpm build:ui",
		"start": "node dist/index.mjs",
		"preview": "vite preview --config src/ui/vite.config.ts",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"packageManager": "pnpm@10.28.2",
	"dependencies": {
		"@hono/zod-validator": "^0.7.6",
		"@stylexjs/stylex": "^0.17.5",
		"hono": "^4.11.7",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@hono/node-server": "^1.19.9",
		"@stylexjs/unplugin": "^0.17.5",
		"@types/node": "^25.1.0",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"tsdown": "^0.20.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	}
}
